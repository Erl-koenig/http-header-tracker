{
  "manifest_version": 3,
  "name": "HTTP Header Tracker",
  "version": "0.0.1",
  "description": "Collects and analyzes HTTP header statistics",
  "permissions": [
    "webRequest",
    "storage",
    "downloads",
    "alarms",
    "unlimitedStorage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "scripts": ["browser-polyfill.js", "anonymization.js", "background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "http.header.tracker@outlook.com",
      "strict_min_version": "109.0"
    }
  }
}
