{
  "manifest_version": 3,
  "name": "HTTP Header Tracker",
  "version": "1.0",
  "description": "Collects and analyzes HTTP header statistics",
  "homepage_url": "https://github.com/Erl-koenig/http-header-tracker",
  "permissions": [
    "webRequest",
    "storage",
    "downloads",
    "alarms",
    "unlimitedStorage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
